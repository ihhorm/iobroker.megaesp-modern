{
    "common": {
        "name":                     "megaesp-modern",
        "version":                  "0.0.2",
	"news": {
            "0.1.0": {
                "en":               "add files",
                "de":               "add files",
                "ru":               "add files"
            }
        },
        "title":                    "Mega-ESP Adapter",
        "desc":                     {
            "en": "Lets control the Mega-ESP over ethernet/internet (http://www.ab-log.ru/forum/viewtopic.php?f=1&t=1130)",
            "de": "Ermöglicht die steuerung von Mega-ESP über Ethernet/Internet (http://www.ab-log.ru/forum/viewtopic.php?f=1&t=1130)"
        },
        "authors": [
            "aushaus <teshaus@gmail.com>"
        ],
        "license":                  "MIT",
        "platform":                 "Javascript/Node.js",
        "mode":                     "daemon",
        "loglevel":                 "info",
        "icon":                     "megad.png",
        "messagebox":               true,
        "readme":                   "https://github.com/ausHaus/ioBroker.megaesp/blob/master/README.md",
        "keywords":                 ["Mega-ESP", "communication"],
		"enabled":                  true,
        "extIcon":                  "https://raw.githubusercontent.com/ioBroker/ioBroker.megad/master/admin/megad.png",
        "type":                     "hardware",
        "localLink":                "http://%native_ip%/",
        "config": {
            "width":     1050,
            "height":    800,
            "minWidth":  600,
            "minHeight": 500
        }
    },
    "native": {
        "ip":                       "",
        "name":                     "",
        "port":                     80,
        "pollInterval":             30,
        "password":                 "sec",
        "longPress":                700,
        "doublePress":              600,
        "ports":                    []
    },
    "instanceObjects": [
        {
            "_id":  "info",
            "type": "channel",
            "common": {
                "name": "Information"
            },
            "native": {}
        },
        {
            "_id":  "info.connection",
            "type": "state",
            "common": {
                "role":  "indicator.connected",
                "name":  "If connected to Mega-ESP",
                "type":  "boolean",
                "read":  true,
                "write": false,
                "def":   false
            },
            "native": {}
        },
        { "_id": "display", "type": "channel", "common": { "name": "Display" }, "native": {} },
        { "_id": "display.lcd", "type": "channel", "common": { "name": "LCD" }, "native": {} },
        { "_id": "display.lcd.backlight", "type": "state", "common": { "name": "Backlight", "type": "boolean", "role": "switch", "read": true, "write": true }, "native": {} },
        { "_id": "display.lcd.clear", "type": "state", "common": { "name": "Clear", "type": "boolean", "role": "button", "read": false, "write": true }, "native": {} },
        { "_id": "display.lcd.row", "type": "state", "common": { "name": "Row", "type": "number", "role": "level", "read": true, "write": true }, "native": {} },
        { "_id": "display.lcd.col", "type": "state", "common": { "name": "Col", "type": "number", "role": "level", "read": true, "write": true }, "native": {} },
        { "_id": "display.lcd.text", "type": "state", "common": { "name": "Text", "type": "string", "role": "text", "read": true, "write": true }, "native": {} },
        { "_id": "display.lcd.send", "type": "state", "common": { "name": "Send", "type": "boolean", "role": "button", "read": false, "write": true }, "native": {} },
        { "_id": "display.oled", "type": "channel", "common": { "name": "OLED" }, "native": {} },
        { "_id": "display.oled.invert", "type": "state", "common": { "name": "Invert", "type": "boolean", "role": "switch", "read": true, "write": true }, "native": {} },
        { "_id": "display.oled.clear", "type": "state", "common": { "name": "Clear", "type": "boolean", "role": "button", "read": false, "write": true }, "native": {} },
        { "_id": "display.oled.size", "type": "state", "common": { "name": "Size", "type": "number", "min": 1, "max": 4, "role": "level", "read": true, "write": true }, "native": {} },
        { "_id": "display.oled.row", "type": "state", "common": { "name": "Row", "type": "number", "role": "level", "read": true, "write": true }, "native": {} },
        { "_id": "display.oled.col", "type": "state", "common": { "name": "Col", "type": "number", "role": "level", "read": true, "write": true }, "native": {} },
        { "_id": "display.oled.text", "type": "state", "common": { "name": "Text", "type": "string", "role": "text", "read": true, "write": true }, "native": {} },
        { "_id": "display.oled.send", "type": "state", "common": { "name": "Send", "type": "boolean", "role": "button", "read": false, "write": true }, "native": {} }
    ]
}
